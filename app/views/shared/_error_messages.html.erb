<% if object.errors.any? %>
    <div id="error_messages" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative", id="error_messages">
        <ul class="mb-0">
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>