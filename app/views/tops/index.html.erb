        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <%=image_tag "nav1.png" %>
            </div>
            <div class="swiper-slide">
                <%=image_tag "nav2.png" %>
            </div>
            <div class="swiper-slide">
                <%=image_tag "nav3.png" %>
            </div>
            <div class="swiper-slide">
                <%=image_tag "nav4.png" %>
            </div>
            <div class="swiper-slide">
                <%=image_tag "nav5.png" %>
            </div>
            <div class="swiper-slide">
