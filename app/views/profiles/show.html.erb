<div class="flex items-center justify-center mt-8">
    <%= link_to request.referer, class: "py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-gray-500 text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all text-sm dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-offset-gray-800" do %>
        <%= t('defaults.back') %>
    <% end %>
</div>
<div class="flex items-center justify-center h-screen">
    <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="flex flex-col items-center py-10 "> 
            <p><%= t('.title') %></p>
            <%= image_tag image_path(current_user.avatar.url), class: 'rounded', size: '200x200' %>
            <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white"><%= current_user.name%></h5>
            <div class="ml-4 my-4">
                <%= current_user.introduction %>
            </div>
            <div class="flex mt-4 space-x-3 md:mt-6">
                <%= link_to (t 'defaults.edit'), edit_profile_path, class: "edit-button py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-700 text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all text-sm dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-offset-gray-800" %>
            </div>
        </div>
    </div>
</div>