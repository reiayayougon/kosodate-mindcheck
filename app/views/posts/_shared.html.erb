<div class="bg-green-50">
    <div class="flex items-center justify-center">
        <%= link_to request.referer, class: "py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-gray-500 text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all text-sm dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-offset-gray-800" do %>
            <%= t('defaults.back') %>
        <% end %>
    </div>
    <div class="flex flex-wrap mt-4">
        <%= render @posts %>
    </div>
    <div class="flex justify-start mt-4">
        <%= paginate @posts, theme: 'user' %> 
    </div> 
</div>
